{
  "globals": {
    "angular": true,
    "app": true
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:angular/johnpapa"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "error",
      4
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-console": "off",
    "no-unused-vars": [
      2,
      {
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "angular/no-service-method": "off",
    "angular/function-type": [
      2,
      "named"
    ],
    "angular/file-name": [
      0,
      {
        "typeSeparator": "dot",
        "ignoreTypeSuffix": true,
        "componentTypeMappings": {
          "factory": "factory",
          "provider": "provider"
        }
      }
    ]
  }
}
